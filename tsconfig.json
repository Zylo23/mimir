{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["es2022"],
        "module": "NodeNext",
        "moduleDetection": "force",
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2022"
    },
    "exclude": ["**/node_modules/**", "dist/**/*", "example/**/*"],
    "include": ["src/**/*"]
}
